@model simple_stock_manager.Models.Stock

@{
    ViewData["Title"] = "Editar estoque";
}

<h1>Editar</h1>
<h4>Estoque</h4>
<hr />

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <label asp-for="ProductId" class="control-label">Produto</label>
                    <select asp-for="ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
                    <span asp-validation-for="ProductId" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label asp-for="Amount" class="control-label"></label>
                    <input asp-for="Amount" class="form-control" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>

    <hr />
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <div class="d-inline p-2">
            <button type="" value="Salvar" class="btn btn-primary">
                <i class="fas fa-save"></i> Salvar
            </button>
        </div>
        <div class="d-inline p-2">
            <a asp-action="Index" class="btn btn-secondary float-right">
                <i class="fas fa-arrow-circle-left"></i> Voltar
            </a>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
