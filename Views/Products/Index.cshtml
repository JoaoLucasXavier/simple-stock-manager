@model IEnumerable<simple_stock_manager.Models.Product>

@{
    ViewData["Title"] = "Produto";
}

<h1>Produto</h1>

<p>
    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Adicionar</a>
</p>

<table class="table table-dark table-striped table-hover border border-primary">
    <thead class="bg-primary">
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                <img src="~/upload/@item.Image" alt="@item.Image" style="width: 50px; height: 50px" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>
            <td class="float-right">
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">
                    <i class="fas fa-receipt"></i> Detalhar
                </a>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-success">
                    <i class="fas fa-edit"></i> Editar
                </a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                    <i class="fas fa-trash-alt"></i> Deletar
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>
