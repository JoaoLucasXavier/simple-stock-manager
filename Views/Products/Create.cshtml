@model simple_stock_manager.Models.Product

@{
    ViewData["Title"] = "Create";
}

<h1>Adicionar</h1>
<h4>Produto</h4>
<hr />

<form asp-action="Create" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <label asp-for="SupplierId" class="control-label">Fornecedor</label>
                    <select asp-for="SupplierId" class ="form-control" asp-items="ViewBag.SupplierId"></select>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label asp-for="ImageUpload" class="control-label"></label>
                    <div class="custom-file">
                    <input type="file" class="custom-file-input" id="ImageUpload" asp-for="ImageUpload">
                    <label data-browse="Procurar" class="custom-file-label" for="ImageUpload"></label>
                    <label style="display: none" id="img_nome"></label>
                    </div>
                    <span asp-validation-for="ImageUpload" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label asp-for="DateRegister" class="control-label"></label>
                    <input asp-for="DateRegister" class="form-control" />
                    <span asp-validation-for="DateRegister" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <label asp-for="Active" class="control-label"></label>
                    <div class="border rounded">
                        <input asp-for="Active" class="form-control" checked/>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr />
    <div class="form-group">
        <div class="d-inline p-2">
            <button type="submit" value="Salvar" class="btn btn-primary">
                <i class="fas fa-save"></i> Salvar
            </button>
        </div>
        <div class="d-inline p-2">
            <a asp-action="Index" class="btn btn-secondary float-right">
                <i class="fas fa-arrow-circle-left"></i> Voltar
            </a>
        </div>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

<script>
    $("#ImageUpload").change(function () {
        $("#img_nome").text(this.files[0].name);
        $("#img_nome")[0].style.display = 'block';
    });

    $("#ImageUpload").attr("data-val", "true");
    $("#ImageUpload").attr("data-val-required", " O campo Imagem é obrigatório");
</script>
}
