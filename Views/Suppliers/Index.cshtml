@model IEnumerable<simple_stock_manager.Models.Supplier>

@{
    ViewData["Title"] = "Index";
}

<h3>Fornecedor</h3>

<p>
    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Adicionar</a>
</p>
<table class="table table-dark table-striped table-hover border border-primary">
    <thead class="bg-primary">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Document)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SupplierType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Document)
            </td>
            <td>
                @(item.SupplierType.ToString() == "NaturalPerson" ? "PF" : "PJ")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>
            <td class="float-right">
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">
                    <i class="fas fa-receipt"></i> Detalhar
                </a>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-success">
                    <i class="fas fa-edit"></i> Editar
                </a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                    <i class="fas fa-trash-alt"></i> Deletar
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>
