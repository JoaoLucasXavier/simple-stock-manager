@model simple_stock_manager.Models.Supplier

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>
<h4>Fornecedor</h4>
<hr />

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label asp-for="Document" class="control-label"></label>
                    <input asp-for="Document" class="form-control" />
                    <span asp-validation-for="Document" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <label asp-for="SupplierType" class="control-label"></label>
                    <select asp-for="SupplierType" class="form-control">
                        <option value="">Selecione</option>
                        <option asp-for="SupplierType" value="1">Pessoa física</option>
                        <option asp-for="SupplierType" value="2">Pessoa Jurídica</option>
                    </select>
                    <span asp-validation-for="SupplierType" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label asp-for="Active" class="control-label"></label>
                    <div class="border rounded">
                        <input asp-for="Active" class="form-control" checked/>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <h4>Endereço</h4>
    <hr />
    <partial name="_SupplierAddress"/>

    <hr />
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <div class="d-inline p-2">
            <button type="" value="Salvar" class="btn btn-primary">
                <i class="fas fa-save"></i> Salvar
            </button>
        </div>
        <div class="d-inline p-2">
            <a asp-action="Index" class="btn btn-secondary float-right">
                <i class="fas fa-arrow-circle-left"></i> Voltar
            </a>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
